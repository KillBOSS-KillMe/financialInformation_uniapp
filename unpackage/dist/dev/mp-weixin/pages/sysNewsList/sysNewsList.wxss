.item {
  width: 690rpx;
  height: auto;
  margin: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.item .newsTitle {
  width: 630rpx;
  height: auto;
  padding: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 29rpx;
  color: #343434;
}
.item .newsTitle view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  font-weight: 800;
}
.item .newsTitle image {
  width: 35rpx;
  height: 35rpx;
  border-radius: 35rpx;
  margin-right: 20rpx;
}
.item .newsTitle text {
  font-size: 25rpx;
  color: #898989;
}
.item .coverImg {
  width: 100%;
  height: 300rpx;
}
.item .info {
  width: 630rpx;
  height: auto;
  padding: 30rpx;
}
.item .info view {
  font-size: 29rpx;
  font-weight: 800;
  color: #343434;
}
.item .info text {
  line-height: 35rpx;
  margin-top: 30rpx;
  font-size: 25rpx;
  color: #898989;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

