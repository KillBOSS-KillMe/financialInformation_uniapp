.managerList {
  width: 750rpx;
  height: auto;
}
.managerList .item {
  width: 630rpx;
  height: 170rpx;
  margin: 30rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  background-color: #ffffff;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}
.managerList .item image {
  width: 140rpx;
  height: 100%;
  border-radius: 10rpx;
}
.managerList .item .info {
  width: 470rpx;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.managerList .item .info .details view {
  font-size: 29rpx;
  font-weight: 800;
  color: #343434;
  margin-bottom: 20rpx;
}
.managerList .item .info .details text {
  font-size: 25rpx;
  color: #898989;
}
.managerList .item .info button {
  width: 140rpx;
  height: 50rpx;
  border-radius: 10rpx;
  font-size: 29rpx;
  color: #ffffff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.managerList .item .info .active {
  background-color: #265ED7;
}
.managerList .item .info .noActive {
  background-color: #81A7F9;
}

